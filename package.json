{
  "name": "google-workspace-mcp",
  "version": "2.0.1",
  "type": "module",
  "description": "Google Workspace MCP Server with interactive account management",
  "main": "build/index.js",
  "bin": {
    "gw-mcp": "./build/index.js",
    "gw-accounts": "./build/cli.js"
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir build --target bun && bun build src/cli.ts --outdir build --target bun",
    "build:cli": "bun build src/cli.ts --outdir build --target bun",
    "dev": "bun --watch src/index.ts",
    "dev:cli": "bun src/cli.ts",
    "inspect": "bunx @modelcontextprotocol/inspector bun src/index.ts",
    "typecheck": "tsc --noEmit",
    "test": "bun test"
  },
  "dependencies": {
    "@clack/prompts": "^1.0.1",
    "@google-cloud/local-auth": "^3.0.1",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "commander": "^14.0.3",
    "googleapis": "^171.4.0",
    "mime-types": "^3.0.2",
    "nodemailer": "^8.0.1",
    "picocolors": "^1.1.1",
    "zod": "3"
  },
  "devDependencies": {
    "@types/mime-types": "^3.0.1",
    "@types/node": "^25.2.3",
    "@types/nodemailer": "^7.0.9",
    "typescript": "^5.8.0"
  }
}